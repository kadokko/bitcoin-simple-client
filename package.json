{
  "name": "bitcoin-simple-client",
  "version": "0.0.1",
  "description": "This application makes it easier to test bitcoin script",
  "main": "src/main.js",
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/styles": "^4.5.0",
    "axios": "^0.19.0",
    "babel-polyfill": "^6.26.0",
    "bech32": "^1.1.3",
    "bignumber.js": "^9.0.0",
    "bn.js": "^5.0.0",
    "csprng": "0.1.2",
    "classnames": "^2.2.6",
    "jsrsasign": "^8.0.12",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-scripts": "^3.1.1",
    "redux": "^4.0.4",
    "redux-form": "^8.2.6",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.5"
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "eslint-config-airbnb": "^18.0.1"
  },
  "scripts": {
    "start:dev": "CHOKIDAR_USEPOLLING=true react-scripts start",
    "start:electron": "electron .",
    "lint": "eslint src/**/*.js*",
    "test": "react-scripts test --env=jsdom ",
    "test:watch": "react-scripts test --env=node --silent=false --verbose false --watch",
    "test:coverage": "react-scripts test --env=node --watchAll=false --coverage",
    "build": "react-scripts build",
    "build:linux": "react-scripts build && electron-builder --linux zip --x64",
    "build:mac": "react-scripts build && electron-builder --mac dmg --x64",
    "build:win": "react-scripts build && electron-builder --win portable --x64"
  },
  "build": {
    "extends": null,
    "files": [
      "build",
      "public",
      "src/main.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/lib/**/*.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "author": "kadokko"
}
